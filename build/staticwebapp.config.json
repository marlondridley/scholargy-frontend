{
  "routes": [
    {
      "route": "/api/*",
      "rewrite": "https://scholargy-dz3lcl3szkm74.azurewebsites.net/api/{*path}"
    },
    {
      "route": "/*",
      "rewrite": "/index.html"
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/images/*", 
      "/css/*", 
      "/js/*", 
      "/api/*", 
      "*.{png,jpg,jpeg,gif,svg,ico,woff,woff2,ttf,eot,css,js,map}"
    ]
  },
  "platform": {
    "apiRuntime": "node:18"
  },
  "trailingSlash": "auto",
  "globalHeaders": {
    "content-security-policy": "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: blob:; img-src 'self' data: blob: https:; font-src 'self' data: https:; connect-src 'self' https: wss: *.supabase.co *.supabase.com; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline';",
    "x-frame-options": "DENY",
    "x-content-type-options": "nosniff",
    "referrer-policy": "strict-origin-when-cross-origin"
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html",
      "statusCode": 200
    }
  }
}
